unbind C-b
set-option -g prefix C-Space
bind C-Space send-prefix

source-file "$HOME/dotfiles/tmux/tmux.conf.shared"
set-option -g status-position bottom

set -ogq @thm_mantle "#292c3c"
set -ogq @thm_crust "#232634"
set -g @catppuccin_flavor "latte"

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run "$HOME/.config/tmux/plugins/tpm/tpm"

# we revert the highlight colors to frappe since that is default background.
set -g mode-style "bg=#626880,fg=#c6d0f5"
