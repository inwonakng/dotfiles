# bsp, stack or float
yabai -m config layout bsp
yabai -m config window_placement second_child


# Padding
yabai -m config top_padding 0
yabai -m config bottom_padding 0
yabai -m config left_padding 0
yabai -m config right_padding 0
yabai -m config window_gap 8


# Mouse settings
# yabai -m config mouse_follows_focus         off
# yabai -m config focus_follows_mouse         off

# Focus selected window
yabai -m window --opacity 0.1 && sleep $(yabai -m config window_opacity_duration) && yabai -m window --opacity 0.0
yabai -m signal --add event=window_destroyed action="yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id)"
# focus window after active space changes
yabai -m signal --add event=space_changed action="yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id)"

# focus window after active display changes
yabai -m signal --add event=display_changed action="yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id)"

border_options=(
  style=round
  width=3.0
  hidpi=off
  active_color=0xff51d677
  inactive_color=0xff363842
)

borders "${border_options[@]}" &
